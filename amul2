    <script>
        // Update current time
        function updateTime() {
            const now = new Date();
            const options = { 
                day: 'numeric', 
                month: 'short', 
                hour: '2-digit', 
                minute: '2-digit',
                hour12: true
            };
            document.getElementById('current-time').textContent = now.toLocaleString('en-IN', options);
        }
        
        updateTime();
        setInterval(updateTime, 60000);

        // Chat popup functionality
        const chatPopup = document.getElementById('chat-popup');
        const chatContent = document.getElementById('chat-content');
        const closeChat = document.getElementById('close-chat');
        const knowMoreButtons = document.querySelectorAll('.know-more-btn');
        const chatInput = document.getElementById('chat-input');
        const sendMessage = document.getElementById('send-message');

        // Chat content for different insights
        const chatData = {
            overselling: [
                { type: 'system', message: 'Overselling Alert Details' },
